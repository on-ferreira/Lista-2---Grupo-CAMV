void GerarMatriz (int mat[30][30])
{
	for (int i =0; i<DIM; i++)
		for (int j = 0; j<DIM; j++)
				Matriz[i][j] = 0;
				
	for (int i =0; i<DIM; i++)
	{
		for (int j = 0; j<DIM; j++)
		{
			if (Matriz[i][j] ==0 && i!=j)
			{
			printf("\nDigite a distância entre as cidades %d e %d: ", i, j);
			scanf("%d", &Distancia);
			Matriz[i][j] = Distancia;
			Matriz[j][i] = Distancia;
			}
		}
	}
}

int Checarinput(int Distancia)
{
	if(Distancia>0 && Distancia<=1000) return Distancia;
	if(Distancia<=0||Distancia>1000)
	{
		printf("Distância inválida! Digite novamente.");
		scanf("%d",&Distancia);
		Checarinput(Distancia);
	}
}
