#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include <string.h>
#include <conio.h> 

int JdV[3][3];
int checarinput(int aux1, int aux2);
int checarlinha();
int checarcoluna();
int checardiagonal_principal();
int checardiagonal_secundaria();
int empate();
void rodada();
void tabuleiro();

int main() 
{
	setlocale (LC_ALL, "");
	int JdV[3][3] = {0,0,0,0,0,0};  /* matrix que recebera o jogo da velha no formato padrão 
3x3, note que a matriz já está sendo inicializada*/
	system("cls");
	printf("Jogo da Velha!\n");
	

	while(1)
	{
		int flagJogador=1,flagVit=0;
		int linha,coluna;
		int aux1, aux2;
		
		if(flagJogador ==1)
		{
			printf("\nPrimeiro Jogador:");
			scanf("%d %d",&aux1, &aux2);
			JdV[aux1-1][aux2-1] = 1;
			checarinput(aux1, aux2);
			printf("\nTabuleiro:\n");
			for(linha = 0; linha<3;linha++)
			{
				for(coluna=0; coluna<3;coluna++)
				{
					printf("%d ", JdV[linha][coluna]);
				}
				printf("\n");
			}
			
			if(JdV[0][0] == JdV[0][1] && JdV[0][0] == JdV[0][2])
			{
				printf("Parabéns! Primeiro jogador ganhou!");
				flagVit = 1;
			}
			if(empate = 1 ) 
			{
				printf("\nEmpate!");
			}
			flagJogador = 2;
		}
		
		if(flagVit ==1 || empate == 1)		break;
		
		if(flagJogador ==2)
		{
			printf("\nSegundo Jogador:");
			scanf("%d %d",&aux1, &aux2);
			JdV[aux1-1][aux2-1] = 2;
			
			flagJogador = 1;
			if(JdV[0][0] !=0 && JdV[0][1] !=0 && JdV[0][2] !=0 && JdV[1][0] !=0 && JdV[1][1] !=0 && JdV[1][2] !=0 && JdV[2][0] !=0 && JdV[2][1] !=0 && JdV[2][2] !=0 ) 
			{
				printf("\nEmpate!");
				flagEmpate =1 ;
			}
		}
		
		if(flagVit ==1 || empate == 1)		break;
	}

	return 0;
}

int empate();
{
	int ctEmpate=0;
	for(int linha =0; linha<3; linha++)
	{
		for(int coluna = 0; coluna<3; coluna++)
		{
			if(JdV[linha][coluna]!=0)
			{
				ctEmpate++;
			}
		}
	}
	if(9 == ctEmpate) return 1;
	else return 0;
}

void tabuleiro()
{
	printf("\nTabuleiro:\n");
	for(linha = 0; linha<3;linha++)
		{
		for(coluna=0; coluna<3;coluna++)
			{
				printf("%d ", JdV[linha][coluna]);
			}
			printf("\n");
		}
}

void rodada(numero_jogador)
{
	if(numero_jogador== 1)
	{
		printf("\nPrimeiro Jogador:");
	}
	
	if(numero_jogador == 2)
	{
		printf("\nSegundo Jogador:");
	}
	scanf("%d %d",&aux1, &aux2);
	checkinput(aux1,aux2);
	if(checkinput == 1)
	{
		printf("\nPosição Inválida!\nTente novamente!");
	}
	else tabuleiro();
}

int checkinput(int aux1, int aux2);
{
	if (Jdv[aux1][aux2]==0) return 0;
	else return 1;
}
