int 90hor()
	{
		
		int i=0,j=0,linha=0,coluna=2;		
		int novo[23][23];

		for(linha=0,j=22;j>=0;j--,linha++)
		{
		
			for (coluna=0,i=0;i<23;i++,coluna++)
			{
				novo[coluna][linha]=matriz[j][i];
			}
		}	
		for(i=0;i<23;i++)
		{
			for(j=0;j<23;j++)
				{
					printf("%d ",novo[i][j]);
				}
				printf("\n");
		}		
		return 0;
	}
int 90Ant()
	{

		int i=0,j=0,linha=0,coluna=2;		
		int novo[23][23];

		for(linha=0,j=22;j>=0;j--,linha++)
		{
		
			for (coluna=0,i=0;i<23;i++,coluna++)
			{
				novo[linha][coluna]=matriz[i][j];
			}
		}	
		for(i=0;i<3;i++)
		{
			for(j=0;j<23;j++)
				{
					printf("%d ",novo[i][j]);
				}
				printf("\n");
		}		
	}
int main() 
{
	setlocale (LC_ALL, "");

	return 0;
}

void ScanArte(char Arte[23][23]) // Função que pede ao usuário que digite a arte e a imprime.
{
char art[23][23];
	
	for(int i=0; i<23;i++)
		for(int j=0; j<23; j++){
			printf("Digite o caractere da casa [%d][%d]: ", i, j);
			scanf("%c", &art[i][j]);}

	int i=0;
	while(i<23){
		for(int j=0; j<23; j++){
	 		printf("%c", &art[i][j]);
			if(art[i][j] = '\n' || j==23)
	 	   	i++;}
	}
}

void LeitorTXT()
{
	FILE *file; //Define um ponteiro do tipo FILE
	file = fopen("Casa.txt", "r"); //Abre o arquivo Casa.txt (o arquivo deve estar no mesmo diretório que o exe)
				       //"r" significa "read", usado na função "fopen" para ler arquivos
	
	if(file == NULL){ //Se o ponteiro não apontar para nada, ou seja, se o nome digitado for diferente do nome do arquivo, printa que é inválido.
		printf("Arquivo inválido.\n");
		return 0;
	}
	
	char arquivo[529];
	while((fgets(arquivo, 529, file)) != NULL){ //Imprime até que encontre um espaço vazio (NULL), daí para o print.
		printf("%s", arquivo);
	}
	
	fclose(file);
}
